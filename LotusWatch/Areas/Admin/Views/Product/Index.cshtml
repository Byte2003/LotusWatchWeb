<div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-dark">Product Management</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
                </a>
            </div>
            <hr />
        </div>
        <br /><br />
        <table id="tblProductData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
@section Scripts {
        <script src="~/js/product.js"></script>
}