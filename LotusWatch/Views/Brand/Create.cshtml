@model Brand
<form class="row g-3" method="post" asp-action="Create">
  <div class="col-md-6">
    <label asp-for="Name" class="form-label"> Brand Name</label>
    <input asp-for="Name" class="form-control">
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label asp-for="Origin" class="form-label">Origin</label>
    <input asp-for="Origin" class="form-control" >
    <span asp-validation-for="Name" class="text-danger"></span>

  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Brand" asp-action="Index" class="btn btn-outline-primary" style="width:100px">Back</a>
  </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}